<Page
    x:Class="LottieUWP.Sample.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:lottieUwp="using:LottieUWP"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid x:Name="LottieAnimationViewContainer">
            <lottieUwp:LottieAnimationView FileName="Assets/Gears.json" AutoPlay="True" Loop="True" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Grid>
        <ListView Grid.Row="1" ItemsSource="{x:Bind Files}" SelectionChanged="Selector_OnSelectionChanged"/>
    </Grid>
</Page>
